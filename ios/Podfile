# ios/Podfile
# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

platform :ios, '11.0'
use_modular_headers!

# üîß REMOVER prepare_react_native_project! - n√£o dispon√≠vel nesta vers√£o

target 'modamaskavo' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    :app_path => "#{Pod::Config.instance.installation_root}/..",
    # üîß DESABILITAR HERMES para manter iOS 11
    :hermes_enabled => false
  )

  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false
    )
    
    # üîß Configura√ß√µes para iOS 11 e resolver problemas de compila√ß√£o
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '11.0'
        config.build_settings['GCC_TREAT_WARNINGS_AS_ERRORS'] = 'NO'
        config.build_settings['SWIFT_TREAT_WARNINGS_AS_ERRORS'] = 'NO'
        config.build_settings['ONLY_ACTIVE_ARCH'] = 'NO'
        config.build_settings['VALID_ARCHS'] = 'arm64'
        config.build_settings['EXCLUDED_ARCHS'] = 'i386'
        
        # Swift settings
        config.build_settings['SWIFT_VERSION'] = '5.0'
        config.build_settings['SWIFT_OPTIMIZATION_LEVEL'] = '-Onone'
        
        # Asset Catalog (se dispon√≠vel)
        if config.build_settings['ASSETCATALOG_COMPILER_GENERATE_SWIFT_ASSET_SYMBOL_EXTENSIONS']
          config.build_settings['ASSETCATALOG_COMPILER_GENERATE_SWIFT_ASSET_SYMBOL_EXTENSIONS'] = 'NO'
        end
      end
    end
    
    # üîß Configura√ß√µes espec√≠ficas para lottie-ios
    installer.pods_project.targets.each do |target|
      if target.name == 'lottie-ios'
        target.build_configurations.each do |config|
          config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'NO'
          config.build_settings['SWIFT_COMPILATION_MODE'] = 'singlefile'
          config.build_settings['SWIFT_OPTIMIZATION_LEVEL'] = '-Onone'
          config.build_settings['SWIFT_VERSION'] = '5.0'
          config.build_settings['ENABLE_MODULE_VERIFIER'] = 'NO'
        end
      end
    end
  end
end
